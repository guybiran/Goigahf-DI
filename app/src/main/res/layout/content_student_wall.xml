<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_collapseMode="none"
    app:layout_scrollFlags="enterAlways"
    tools:context="com.example.omriakerman.goigahf2.StudentWallActivity"
    tools:showIn="@layout/activity_student_wall">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <RelativeLayout
            android:id="@+id/main_details_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/title_phone_textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/title_vehicle_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp"
                android:text="@string/title_phone_number"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/phone_number_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/title_phone_textView"
                android:layout_alignBottom="@+id/title_phone_textView"
                android:layout_toEndOf="@+id/title_phone_textView"
                android:layout_toRightOf="@+id/title_phone_textView"
                android:text="TextView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title_vehicle_textView"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_joined_textView"
                android:layout_alignLeft="@+id/title_phone_textView"
                android:layout_alignStart="@+id/title_phone_textView"
                android:layout_marginBottom="11dp"
                android:text="@string/title_vehicle"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vehicle_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_phone_textView"
                android:layout_toEndOf="@+id/title_vehicle_textView"
                android:layout_toRightOf="@+id/title_vehicle_textView"
                android:text="TextView"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date_joined_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="(תאריך הצטרפות התלמיד - 27/2/2016)"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progress_divider"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/main_details_layout"
            android:layout_marginTop="11dp">

            <TextView
                android:id="@+id/title_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="4dp"
                android:text="@string/title_progress"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:background="#000000"
                android:visibility="visible">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line2"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/line1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:background="#000000"
                android:visibility="visible">

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/line2"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/line2"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:paddingBottom="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_car" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progress_details_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/progress_divider">

        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
