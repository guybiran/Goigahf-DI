<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omriakerman.goigahf2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InstructorHomeScreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LessonDetailsActivity" />
        <activity android:name=".StudentsListActivity" />
        <activity
            android:name=".StudentWallActivity"
            android:label="@string/title_activity_student_wall"
            android:parentActivityName=".StudentsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.omriakerman.goigahf2.StudentsListActivity" />
        </activity>
        <activity
            android:name=".StartingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentHomeScreenActivity"
            android:label="@string/title_activity_student_home_screen"
            android:parentActivityName=".StartingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.omriakerman.goigahf2.StartingActivity" />
        </activity>
    </application>

</manifest>